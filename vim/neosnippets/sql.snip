snippet     select_data
abbr        select * from ... where ...
options     head
  select ${0:*}
  from   ${1:cities}
  where  ${2:area = 'asia'}
  ;

snippet     select_join_data
abbr        select * from t1 join t2 ... on ...
  select ${0:*}
  from   ${1:table1} ${2:t1}
    join ${3:table2} ${4:t2}
      on $2.${5:column} = $4.$5
  ;

snippet     insert_data
abbr        insert into ... values ( ... )
options     head
  insert into ${1:cities}
  values (${0:'vancouver', 'canada'})
  ;

snippet     insert_select_data
abbr        insert into ... select * from ... where ...
options     head
  insert into ${1:cities}
  select ${0:*}
  from   ${2:cities}
  where  ${3:area = 'asia'}
  ;

snippet     update_data
abbr        update ... set ... where ...
  update ${1:table}
  set    ${2:column} = ${3:value}
  where  ${0:condition}
  ;

snippet     delete_data
abbr        delete from ... where ...
  delete from ${1:table}
  where  ${0:condition}
  ;

snippet     delete_select_data
abbr        delete from t1 join t2 on ... where ...
  delete from ${1:table1} ${2:t1}
    join ${3:table2} ${4:t2}
      on $2.${5:column} = $4.$5
  where  $4.${0:condition}
  ;

