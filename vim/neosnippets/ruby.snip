snippet template:Rakefile
alias   rake
	require 'rake/testtask'

	task default: :test

	Rake::TestTask.new(:test) do |t|
		t.libs << 'test'
		t.libs << 'src'
		t.test_files = FileList['test/**/*_test.rb']
	end

	task :${0:other} do |t|
	end


