{
  "env": {
    "FASTLANE_SKIP_UPDATE_CHECK": "true",
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "true",
    "CLAUDE_CODE_DISABLE_AUTO_MEMORY": "false",
    "ENABLE_TOOL_SEARCH": "true"
  },
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(wc:*)",
      "Bash(rg:*)",
      "Bash(fd:*)",
      "Bash(npm run:*)",
      "Skill(skill-creator)",
      "Skill(kiro:*)",
      "WebSearch(domain:*)",
      "mcp__*"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(curl -fsSL:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(bash -c:*)",
      "Bash(sh -c:*)",
      "Bash(terraform apply -auto-approve:*)",
      "Read(*credential*)",
      "Read(.env*)",
      "Read(./secrets/**)"
    ],
    "ask": [
      "Bash(rm:*)",
      "Bash(sed -i:*)",
      "Bash(gsed -i:*)"
    ],
    "additionalDirectories": [
      "~/Documents/memos"
    ]
  },
  "model": "sonnet",
  "hooks": {
    "PostToolUse": [
